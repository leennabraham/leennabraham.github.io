	preview={annot.jpg},
	publisher = {Cold Spring Harbor Laboratory},
	title = {Improved gene annotation of the fungal wheat pathogen Zymoseptoria tritici based on combined Iso-Seq and RNA-Seq evidence},
	url = {https://www.biorxiv.org/content/early/2023/05/30/2023.04.26.537486},
